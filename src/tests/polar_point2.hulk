type Point(x : Number,y : Number) {
    x : Number = x;
    y : Number = y;

    getX() : Number => self.x;
    getY() : Number => self.y;

    setX(x : Number) : Number => self.x := x;
    setY(y : Number) : Number => self.y := y;
}

type PolarPoint inherits Point {
    rho() : Number => sqrt(self.getX() ^ 2 + self.getY() ^ 2);
}

let pt = new PolarPoint(3,4) in {
    pt.setX(5);
    pt.setY(12);
    print("X: " @ pt.getX());
    print("Y: " @ pt.getY());
    print("Rho: " @ pt.rho());
}